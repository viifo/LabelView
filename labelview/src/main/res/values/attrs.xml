<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LabelLayout">
        <!-- 布局模式 -->
        <attr name="mode" format="enum">
            <enum name="flex" value="0"/> <!-- 流式布局(默认) -->
            <enum name="grid" value="1"/> <!-- 网格布局 -->
            <enum name="line" value="2"/> <!-- 线性布局 -->
        </attr>
        <!-- 布局方向 -->
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <!-- item 使用的布局 -->
        <attr name="itemLayout" format="reference"/>
        <!-- 是否支持多选，默认 false -->
        <attr name="multiChoice" format="boolean"/>
        <!-- 最大可选数量(开启多选有效) -->
        <attr name="maxSelected" format="integer"/>
        <!-- 是否支持滚动，默认 false -->
        <!-- line模式下滚动方向与布局方向一致， flex 模式下滚动方向固定垂直 -->
        <attr name="scrollable" format="boolean"/>
        <!-- 是否开启 item 动画 -->
        <attr name="enableItemAnimator" format="boolean"/>

        <!-- 流式布局使用参数 -->
        <!-- item 是否填充行剩余空间 -->
        <attr name="flexGrow" format="boolean"/>
        <!-- item 的对齐方式 -->
        <attr name="justifyContent"/>

        <!-- 网格布局使用参数-->
        <!-- 每行显示的 item 个数 -->
        <attr name="spanCount" format="integer"/>

    </declare-styleable>
</resources>